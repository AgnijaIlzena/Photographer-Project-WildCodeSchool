{% extends 'adminBase.html.twig' %}

{% block title %}Photo{% endblock %}
{% block header %}{{ parent() }}{% endblock %}
{% block stylesheets %}
    <style>
        thead {
            border-bottom: solid lightgrey 0.5px;
        }

        .card-body {
            margin: 0 auto;
            width: 50%;
        }

        .photo {
            background: rgb(16, 133, 100);
            background: linear-gradient(286deg, rgba(16, 133, 100, 1) 0%, rgba(25, 135, 84, 1) 50%);
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5" style="width: 80%">
        <div class="card mb-3">
            <div class="photo card-header bg-success" style="width:95%; height: 10%; position: relative; bottom:20px; left:20px;" >
                <h4 class="card-title text-light text-uppercase">Photo n*: <span class="pr-3"></span>{{ photo.number }} </h4>
            </div>
                <div class="d-flex justify-content-start">
                   <div class="mx-2"><a class="btn btn-outline-warning btn-sm" href="{{ path('photo_edit', {'id': photo.id}) }}" role="button">edit photo</a></div>
                   <div class="mx-2"> {{ include('adminDashboard/photo/_delete_form.html.twig') }}</div>
                </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover text-center table-borderless">
                            <tbody>
                                <tr>
                                    <th class="text-uppercase text-success">Id</th>
                                    <td>{{ photo.id }}</td>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-success">Gallery</th>
                                    <th>{{ photo.galery.title }}</th>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-success">Img icon</th>
                                    <td><img  style="width: 100px; height: 100px" src="/uploads/{{ photo.path }}"></td>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-success">Number</th>
                                    <td>{{ photo.number }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
        </div>
     </div>
{% endblock %}
