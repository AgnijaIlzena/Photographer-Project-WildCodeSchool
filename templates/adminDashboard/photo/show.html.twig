{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
{{ include('adminDashboard/admin/_adminNavBar.html.twig') }}
<section class="jumbotron" style="background-color: white;">
    <div class="card mb-3">
        <div class="card-header bg-success" style="width:95%; height: 10%; position: relative; bottom:20px; left:20px;" >
            <h4 class="card-title text-light text-uppercase">Photo n <span class="pr-3">:</span>{{ photo.number }} </h4>
        </div>
        <div class="d-flex justify-content-start">

           <div class="mx-2"><a class="btn btn-outline-warning btn-sm" href="{{ path('photo_edit', {'id': photo.id}) }}" role="button">edit photo</a></div>
            <div class="mx-2"> {{ include('adminDashboard/photo/_delete_form.html.twig') }}</div>
        </div>

    <table class="table table-md text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Gallery</th>
                <th>{{ photo.galery.title }}</th>
            </tr>
            <tr>
                <th>Img icon</th>
                <td><img  style="width: 100px; height: 100px" src="/uploads/{{ photo.path }}"></td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ photo.number }}</td>
            </tr>
        </tbody>
    </table>
    </div>
  {#  <a href="{{ path('photo_index') }}">back to list</a>#}

</section>
{% endblock %}
