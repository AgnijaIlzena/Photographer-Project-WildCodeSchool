{% extends 'base.html.twig' %}

{% block title %}Galery{% endblock %}
{% block header %}{{ include('adminDashboard/admin/_adminNavBar.html.twig') }}{% endblock %}

{% block body %}
<div class="container mt-5">
   <section class="jumbotron" style="background-color: white;">
       <div class="card mb-3">
           <div class="card-header bg-warning" style="width:95%; height: 10%; position: relative; bottom:20px; left:20px;" >
    <h4 class="card-title text-light text-uppercase">Gallery <span class="pr-3">:</span>{{ galery.title }} </h4>
           </div >
           <div class="d-flex justify-content-start">
           <div class="mx-2"><a class="btn btn-outline-warning btn-sm" href="{{ path('admin_galery_edit', {'id': galery.id}) }}" role="button">edit gallery</a></div>
           <div class="mx-2">{{ include('adminDashboard/galery/_delete_form.html.twig') }}</div>
           </div>
           <div class="card-body table-responsive">

    <table class="table table-md  table-hover text-center">
        <tbody>

            <tr>
                <th>Title</th>
                <td>{{ galery.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ galery.year }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ galery.password }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ galery.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ galery.description }}</td>
            </tr>
         </tbody>
    </table>
           </div>
       </div>
       <div class="row">
        {% for photo in galery.photos %}
            <div class="col-lg-3  text-center ">
              <img class="image-fluid rounded-1 d-inline-block" style="padding: 20px 20px 5px 20px; height: 150px;" src="{{ asset('/uploads/' ~ photo.path) }}" alt="Image" >
              {{ include('adminDashboard/galery/_delete_photo_form.html.twig') }}
            </div>
        {% endfor %}
    </div>
   </section>
</div>
{% endblock %}
