{% extends 'base.html.twig' %}

{% block title %}Galery index{% endblock %}

{% block body %}
{{ include('adminDashboard/admin/_adminNavBar.html.twig') }}
<section class="jumbotron" style="background-color: white;">
    <div class="card">
        <div class="card-header">
            <h4><span class="badge badge-secondary badge-pill">All Galeries</span></h4>
        </div>
        <div class="card-body">
    <table class="table table-md table-responsive-lg table-hover text-center ">
        <thead class="text-uppercase">
            <tr class="">
                <th style="width:5%">Id</th>
                <th style="width:20%">Title</th>
                <th style="width:5%">Year</th>
                <th style="width:20%"></th>
                <th style="width:7%">Password</th>
            </tr>
        </thead>
        <tbody>
        {% for galery in galeries %}
            <tr>
                <td>{{ galery.id }}</td>
                <td>{{ galery.title }}</td>
                <td>{{ galery.year }}</td>
                <td>
                    <a class="btn btn-outline-success btn-sm" href="{{ path('admin_galery_show', {'id': galery.id}) }}" role="button">show</a>
                    <a class="btn btn-outline-warning btn-sm" href="{{ path('admin_galery_edit', {'id': galery.id}) }}" role="button">edit</a>
               </td>
                <td>{{ galery.password }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    <a class="btn btn-primary" href="{{ path('admin_galery_new') }}" role="button">create NEW gallery</a>
    </div>
</section>
{% endblock %}
