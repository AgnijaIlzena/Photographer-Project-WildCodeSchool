{% extends 'base.html.twig' %}

{% block title %}Galerie #{{ galery.title }}{% endblock %}


{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ galery.title }}</h1>
            <p>Description{{ galery.description }}</p>
            <p>Année : {{ galery.year }}</p>

            {% for photo in photos %}
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <div class="grid xs2 sm3 gutter-0 card">
                        <div class="primary flex vcenter fx_center">
                            <img src="/images/{{ photo.path|imagine_filter('square') }}"  alt="{{ photo.number }}">
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Numéro :{{ photo.number }}</h5>
                            <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        </div>
                        <a href="{{ path("galery_photo_show", {galeryId: galery.id, photoId: photo.id}) }}" class="btn">Agrandir</a>
                    </div>

                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path("galery_show", {id: galery.id}) }}">
        Retour à la liste des galeries
    </a>
{% endblock %}

