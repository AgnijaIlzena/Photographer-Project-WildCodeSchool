{% extends 'base.html.twig' %}

{% block title %}Galerie #{{ galery.title }}{% endblock %}


{% block body %}

    <div class="media">
        <div class="media-body">
            <div class="text-center">
                <h1 class="mt-2">{{ galery.title }}</h1>
                <p>Description: {{ galery.description }}</p>
                <p>Année : {{ galery.year }}</p>
            </div>

            <div class="container-fluid bg-img mx-4 rounded mx-auto">
                <div class="row row-cols-1 g-2 col-md-7 mx-auto">
                {% for photo in galery.photos %}
                    <div class="col-lg-4 col-sm-4  p-4">
                        <a href="{{ ('/uploads/' ~ photo.path)|imagine_filter('banner') }}" data-lightbox="{{ photo.number }}">
                            <img class="rounded" src="{{ ('/uploads/' ~ photo.path)|imagine_filter('square') }}"  alt="{{ photo.number }}">
                        </a>
                    </div>
                {% endfor %}
                    <div class="text-right">
                        <p><a href="{{ path("galery_show_download", {id: galery.id}) }}">Télécharger vos photos</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <p><a href="{{ path("galery_index") }}">Retour à la liste des galeries</a></p>
    </div>


{% endblock %}

