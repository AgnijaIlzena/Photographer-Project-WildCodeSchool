{% extends 'base.html.twig' %}

{% block title %}Galerie #{{ galery.title }}{% endblock %}


{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ galery.title }}</h1>
            <p>Description{{ galery.description }}</p>
            <p>Année : {{ galery.year }}</p>
            <div class="row row-cols-1 row-cols-md-4 g-4">
            {% for photo in galery.photos %}
                <div class="col ">
                    <div class="grid xs2 sm3 gutter-0 ">
                        <img class="rounded mx-auto d-block" src="{{ ('/uploads/' ~ photo.path)|imagine_filter('square') }}"  alt="{{ photo.number }}">
                        <div class="text-center" >
                            <a href="{{ path("galery_photo_show", {galeryId: galery.id, photoId: photo.id}) }}" class="btn">Agrandir</a>

                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
    <a href="{{ path("galery_index") }}">Retour à la liste des galeries</a>

{% endblock %}

