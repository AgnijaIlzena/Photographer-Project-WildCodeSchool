{% extends 'base.html.twig' %}

{% block title %} Galery{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header">
            <h2 class="card-title">Login</h2>
        </div>
        <div class="card-body">
            <p class="card-text">Se connecter pour accéder à son album photo</p>
            <input type="text" name="password">
            <button>Valider</button>
        </div>
    </div>
    <br>

        <div class="col-10 row mx-auto row-cols-md-4">
            {% for galery in galeries %}
            <div class="col-sm">
                <div class="card bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">
                        <h5 class="card-title">{{ galery.title }}</h5>
                    </div>
                    <div class="card-body w-auto">
                        <p class="card-text">{{ galery.description }}</p>
                        <a href="{{ path("galery_show", {id: galery.id}) }}" class="btn btn-primary">Voir les photos</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>


{% endblock %}
